<Window x:Class="Transmission.API.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="392" Width="554" ResizeMode="NoResize">
    <Grid>
        <ListView Margin="10" Name="lvTorrents" Width="500">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Stretch" Width="470">
                        <TextBlock Text="{Binding Name}" FontWeight="Normal" Margin="2,0,0,0" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" HorizontalAlignment="Stretch" />
                        <ProgressBar Height="10" Value="{Binding PercentDone}" SmallChange="0.001" Maximum="1" LargeChange="0.001" Foreground="#FF016AD3" HorizontalAlignment="Stretch" />
                        <Separator HorizontalAlignment="Stretch" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
